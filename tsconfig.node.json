{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@types/*": ["src/types/*"],
			"@classes/*": ["src/classes/*"]
		}
	},
	"include": ["vite.config.ts"]
}
